        // ----------------------------------------------------
        // 3. æ¸²æŸ“ä¸»é‚è¼¯
        // ----------------------------------------------------
        const resultsContainer = document.getElementById('resultsContainer');
        const searchInput = document.getElementById('searchInput');
        const cardCountSpan = document.getElementById('cardCount');

        function createCard(item) {
            const card = document.createElement('div');
            card.className = 'group relative bg-white p-6 rounded-xl shadow-lg hover:shadow-2xl transition duration-300 transform hover:-translate-y-1 border-t-4 border-blender-orange flex flex-col';
            card.innerHTML = `
                <div class="flex-grow">
                    <div class="absolute top-4 right-4">${getIconSVG(item.icon_name)}</div>
                    <h3 class="text-xl font-semibold mb-1 text-gray-800 pr-12">${item.item}</h3>
                    <div class="mb-3">${getLevelStars(item.level)}</div>
                    <p class="text-sm font-mono p-1 bg-orange-50 rounded inline-block mb-3 text-red-600 border border-orange-100 font-bold">${item.shortcut}</p>
                    <p class="text-xs text-blender-orange font-bold uppercase mb-2">åˆ†é¡ï¼š${item.section}</p>
                    <p class="text-gray-600 text-base leading-relaxed">${item.description}</p>
                </div>
                <div class="mt-4 pt-3 border-t border-gray-200">
                    <p class="text-xs font-semibold text-gray-400 mb-1 italic">é‡è¦å‚™è¨» (Memo):</p>
                    <textarea class="w-full text-sm text-gray-700 p-2 border border-gray-100 rounded focus:border-blender-orange bg-slate-50 transition-colors" rows="2" placeholder="é»æ“Šè¨˜éŒ„ç‰¹æ®Šåƒæ•¸æˆ–å¿ƒå¾—...">${item.memo || ''}</textarea>
                </div>
            `;
            return card;
        }

        function renderResults(query) {
            resultsContainer.innerHTML = '';
            const lowerQuery = query.toLowerCase();
            const filtered = KNOWLEDGE_BASE
                .filter(i => 
                    i.item.toLowerCase().includes(lowerQuery) || 
                    i.shortcut.toLowerCase().includes(lowerQuery) || 
                    i.section.toLowerCase().includes(lowerQuery) ||
                    i.description.toLowerCase().includes(lowerQuery)
                )
                .sort((a, b) => b.level - a.level);
            
            cardCountSpan.textContent = `å…±æ”¶éŒ„ ${filtered.length} é …åŠŸèƒ½`;
            filtered.forEach(i => resultsContainer.appendChild(createCard(i)));
            
            const noResults = document.getElementById('noResults');
            if (filtered.length === 0) noResults.classList.remove('hidden');
            else noResults.classList.add('hidden');
        }

        // ----------------------------------------------------
        // 4. AI æ™ºèƒ½ç­”ç–‘èˆ‡éœæ…‹å…§å®¹
        // ----------------------------------------------------
        const apiKey = ""; 
        const askBtn = document.getElementById('askBtn');
        askBtn.addEventListener('click', async () => {
            const query = document.getElementById('aiQuery').value.trim();
            if (!query) return;
            askBtn.disabled = true;
            document.getElementById('loadingSpinner').classList.remove('hidden');
            document.getElementById('btnText').textContent = "åˆ†æç­†è¨˜ä¸­...";
            
            const systemPrompt = `ä½ æ˜¯ä¸€ä½å°ˆæ¥­ Blender 3D æ•™ç·´ã€‚è«‹æ ¹æ“šæä¾›çš„ã€çŸ¥è­˜åº«ã€‘å›ç­”å•é¡Œï¼Œå‘ŠçŸ¥è©²å·¥å…·ã€å¸¸ç”¨ç­‰ç´š(1-5)ã€‘ï¼Œä¸¦é™„ä¸Šæ“ä½œæ­¥é©Ÿã€‚
            ã€çŸ¥è­˜åº«ã€‘ï¼š${JSON.stringify(KNOWLEDGE_BASE)}
            è¦å‰‡ï¼šä½¿ç”¨ç¹é«”ä¸­æ–‡ï¼Œæ­¥é©Ÿç°¡æ½”ï¼Œæ¨™è¨»å¿«æ·éµã€‚`;

            try {
                const response = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ contents: [{ parts: [{ text: query }] }], systemInstruction: { parts: [{ text: systemPrompt }] } })
                });
                const result = await response.json();
                const text = result.candidates?.[0]?.content?.parts?.[0]?.text || "AI æš«æ™‚ç„¡æ³•å›è¦†ã€‚";
                document.getElementById('aiResult').innerHTML = text.replace(/\*\*(.*?)\*\*/g, '<b class="text-orange-400">$1</b>');
                document.getElementById('aiAnswerBox').classList.remove('hidden');
            } catch (e) {
                document.getElementById('aiResult').textContent = "é€£æ¥ AI å¤±æ•—ï¼Œè«‹ç¨å¾Œå†è©¦ã€‚";
                document.getElementById('aiAnswerBox').classList.remove('hidden');
            } finally {
                askBtn.disabled = false;
                document.getElementById('loadingSpinner').classList.add('hidden');
                document.getElementById('btnText').textContent = "è©¢å• AI";
            }
        });

        // åˆå§‹åŒ–éœæ…‹å…§å®¹
