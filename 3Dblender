                'pen-tool': `<path d="M12 19l7-7 3 3-7 7-3-3z"/><path d="M18 13l-1.5-1.5"/><path d="M7 21l3-3"/><path d="M3 3l1.5 1.5"/>`,
                'grid-3x3': `<rect width="18" height="18" x="3" y="3" rx="2"/><path d="M9 3v18M15 3v18M3 9h18M3 15h18"/>`,
